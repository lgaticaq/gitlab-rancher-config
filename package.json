{
  "name": "gitlab-rancher-config",
  "version": "2.0.0",
  "description": "Semantic-release shareable config for GitLab with Rancher",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard 'src/**/*.js'",
    "test": "echo 'no test'",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/gitlab-rancher-config.git"
  },
  "keywords": [
    "gitlab",
    "rancher",
    "changelog",
    "release",
    "semantic-release",
    "semantic-release-config",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/gitlab-rancher-config/issues"
  },
  "homepage": "https://github.com/lgaticaq/gitlab-rancher-config#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/prompt-cli": "7.2.1",
    "@semantic-release/changelog": "3.0.1",
    "@semantic-release/git": "7.0.6",
    "@semantic-release/github": "5.2.7",
    "@semantic-release/npm": "5.1.2",
    "eslint": "5.11.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.0",
    "lint-staged": "7.3.0",
    "npm-github-config": "2.0.0",
    "prettier-standard": "8.0.1",
    "semantic-release": "15.13.1",
    "travis-deploy-once": "5.0.11"
  },
  "peerDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@semantic-release/gitlab": "^3.0.4",
    "@semantic-release/npm": "^5.0.4",
    "semantic-release-gitlab-registry": "^2.2.0",
    "semantic-release": "^15.9.0",
    "semantic-release-rancher": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  }
}
