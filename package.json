{
  "name": "gitlab-rancher-config",
  "version": "4.0.1",
  "description": "Semantic-release shareable config for GitLab with Rancher",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard 'index.js'",
    "test": "echo 'no test'"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/gitlab-rancher-config.git"
  },
  "keywords": [
    "gitlab",
    "rancher",
    "changelog",
    "release",
    "semantic-release",
    "semantic-release-config",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/gitlab-rancher-config/issues"
  },
  "homepage": "https://github.com/lgaticaq/gitlab-rancher-config#readme",
  "dependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/gitlab": "^4.0.0",
    "semantic-release-gitlab-registry": "^2.2.1",
    "semantic-release-rancher": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@eclass/eslint-config": "1.1.3",
    "@eclass/semantic-release-npm-github-config": "3.0.0",
    "eslint": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsdoc": "15.12.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.4.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier-standard": "15.0.1",
    "semantic-release": "15.13.28"
  },
  "peerDependencies": {
    "semantic-release": "^15.9.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "index.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:js-lib"
    ],
    "minor": {
      "automerge": true
    },
    "major": {
      "automerge": false
    }
  },
  "release": {
    "extends": "@eclass/semantic-release-npm-github-config"
  }
}
